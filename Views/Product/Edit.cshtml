<div class="row">

    <div class="col-md-3">


        <form action="/product/Edit" method="post">
            <div class="form-horizontal">
                <input type ="hidden" value="@Model.Id" name="Id"/>
                <div class="form-group">
                    <label class="cotrol-label col-md-6" >
                        Name
                    </label>
                    <input type="text" name="Name" value="@Model.Name" class=" col-md-6" />

                </div>

                <div class="form-group">
                    
                        <label class="cotrol-label col-md-6">

                        Description
                    </label>
                    <input type="text" name="Description" value="@Model.Description " class=" col-md-6" />

                </div>
                <div class="form-group">
                    
                        <label class="cotrol-label col-md-6">

                        Amount
                    </label>
                    <input type="text" name="Amount" value="@Model.Amount " class=" col-md-6" />

                </div>
                <div class="form-group">
                    <label class="cotrol-label col-md-6">

                        Color
                    </label>
                    <input type="text" name="Color" value=" @Model.Color" class=" col-md-6" />
                </div>
                <div class="form-group">

                    <input type="submit" value="update " class=" btn btn-primary" />
                    <a href="/product/index">Back to product index</a>
                </div>

            </div>


        </form>
    </div>
</div>
