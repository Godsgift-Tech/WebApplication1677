
@model List<ProductModel>

<h2> Our Mobile Phone The Specification</h2>
<h4>This is the index for Product Controller </h4>
<h6>Welcome</h6>
<a href ="/product/add" class="btn-primary">
    Add Product
</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Amount</th>
            <th>Color</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var prodt in Model)
        {
            <tr>
                <td>@prodt.Name</td>
                <td>@prodt.Description</td>
                <td> &#x20A6;@prodt.Amount.ToString("N")</td>
                <td>@prodt.Color</td>
                <td><a href="product/edit/@prodt.Id class" class="btn btn-primary" >edit</a></td>
               
                <td>
                    <form asp-action="Delete" asp-controller="Product" method="post" data-id="@prodt.Id" onsubmit="return confirmDelete();">
                            @Html.AntiForgeryToken()
                        <input name="_method" type="hidden" value="DELETE" />
                        <input type="hidden" name="id" value="@prodt.Id" />
                        <input type="submit" value="Delete" class="btn btn-danger btn-xs" />
                    </form>
                </td>
                
            </tr>
        }
    </tbody>



</table>
<script>
    function confirmDelete() {
        return confirm('Are you sure you really want to delete this product?');
    }
</script>
